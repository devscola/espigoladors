<h1>Display Excedents</h1>

<div>
  <% @chances.each do |chance| %>
    <p>Title: <%= chance.title %></p>
    <p>Address: <%= chance.address %></p>
    <p>Schedule: <%= chance.schedule %></p>
    <% chance.products.each do |product| %>
      <p><%= product.food_type %></p>
      <p><%= product.quantity %></p>
      <p><%= product.expiration %></p>
    <% end %>
    <p><%= link_to "See spot", chance_path(chance.id) %> - <%= link_to "Edit spot", edit_chance_path(chance.id) %> - <%= link_to "Delete excedent", chance_path(chance.id), method: 'delete', data: {confirm: "Are you sure?"} %></p>

  <% end %>
</div>