<div class="row">
	<div class="large-12 columns">
		<section class="check-title">
			<h1><%= @chance.title %></h1>
			<p><%= @chance.email %></p>
		</section>
	</div>
</div>

<div class="row">
	<div class="large-6 column">
		
		<section><%= form_for @chance, html: { id: "chance-form" } do |f| %>

            <%= f.hidden_field :title %>
            <%= f.hidden_field :address %>
            <%= f.hidden_field :schedule %>
            <%= f.hidden_field :email %>
        </section>

		<section>
			<% @chance.products.each do |product| %>
			<ul class="view-product">
		   	  	<h1 class="product-name"><%= product.quantity %> kilos de <%= product.food_type %></h1> 
			    <li>Caducidad: <%= product.expiration %></li>
			    <li>Horario de recogida <%= @chance.schedule %></li>
			    <li><%= @chance.address %></li>
		  	</ul>
	    	<% end %>

          <%= f.submit value: "AÃ±ade tu producto", class: "button expand home-button" %>

		</section>

	 </div>	
 

  <div class="large-6 column address-field">

    <input type="text" class="refine" value="<%= @chance.address %>">
    <input type="hidden" class="lat"/>
    <input type="hidden" class="lng"/>

    <div class="map" id="mapa">

  		<% end %>

 	</div>
</div>