<div class="row">
    <div class="small-6 large-8 columns">
        <img src="marca-espigoladors.png">
    </div>


    <div class="small-6 large-4 columns home-form">
    	<%= form_for @chance, html: { id: "chance-form" } do |f| %>
    	    <%= f.label :title %>
    	    <%= f.text_field :title %>
    	    <%= f.label :address %>
    	    <%= f.text_field :address, placeholder: "Enter the address of your excedents" %>
    	    <%= f.label :schedule %>
    	    <%= f.text_field :schedule, placeholder: "Enter the schedule to pick up the excedents" %>
    	      <%= f.fields_for :product do |ff| %>
    	        <div>
    	          <%= ff.label :food_type %>
    	          <%= ff.text_field :food_type %>
    	          <%= ff.label :quantity %>
    	          <%= ff.text_field :quantity %>
    	          <%= ff.label :expiration%>
    	          <%= ff.text_field :expiration %>
    	        </div>
    	      <% end %>
    	    <%= f.submit type="Submit", class: "button" %>

    	<% end %>

    </div>
</div>
